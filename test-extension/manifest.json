{
  "manifest_version": 3,
  "name": "Alayacare Extension",
  "version": "1.0",
  "description": "adds additional functionality useful for NH",

  "permissions": [
    "webRequest"
  ],

  "web_accessible_resources": [
    {
      "resources": ["contentscripts/builder/builder.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "host_permissions": [
    "*://*.alayacare.com/*"
  ],

  "background": {
    "service_worker": "serviceworkers/service-worker.js"
  },
  
  "content_scripts": [
    {
      "js": [
        "contentscripts/fetchextra.js",
        "contentscripts/builder/builder.js"
      ],
      "matches": [
        "https://nhcares.alayacare.com/*"
      ],
      "run_at": "document_start"
    }
  ]
}