{
  "manifest_version": 3,
  "name": "Alayacare Extension",
  "version": "1.0",
  "description": "add schedule building functionality",
  "devtools_page": "devtools/devtools.html",

  "permissions": [
    "webRequest"
  ],

  "host_permissions": [
    "*://*.alayacare.com/*"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "injected.js"
      ],
      "matches": [
        "https://nhcares.alayacare.com/*"
      ]
    }
  ],

  "background": {
    "service_worker": "serviceworkers/service-worker.js"
  },
  
  "content_scripts": [
    {
      "js": [
        "contentscripts/builder.js",
        "contentscripts/intercept.js"
      ],
      "matches": [
        "https://nhcares.alayacare.com/*"
      ],
      "run_at": "document_start"
    }
  ]
}