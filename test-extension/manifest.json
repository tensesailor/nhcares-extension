{
  "manifest_version": 3,
  "name": "Alayacare Extension",
  "version": "1.0",
  "description": "add schedule building functionality",

  "permissions": [
    "webRequest"
  ],

  "host_permissions": [
    "*://*.alayacare.com/*"
  ],

  "background": {
    "service_worker": "scripts/service-worker.js"
  },
  
  "content_scripts": [
    {
      "js": ["scripts/builder.js"],
      "matches": [
        "https://nhcares.alayacare.com/*"
      ]
    }
  ]
}